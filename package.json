{
	"private": false,
	"version": "1.0.13",
	"license": "GPL-3.0-or-later",
	"name": "@clevercanyon/utilities.node",
	"description": "Another great project by Clever Canyon.",
	"repository": "https://github.com/clevercanyon/utilities.node",
	"homepage": "https://github.com/clevercanyon/utilities.node#readme",
	"bugs": "https://github.com/clevercanyon/utilities.node/issues",
	"funding": "https://github.com/sponsors/clevercanyon",
	"keywords": [
		"clevercanyon"
	],
	"author": {
		"name": "Clever Canyon",
		"url": "https://clevercanyon.com"
	},
	"contributors": [],
	"type": "module",
	"files": [
		"/dist"
	],
	"bin": {},
	"imports": {},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"types": "./dist/types/index.d.ts"
		},
		"./glob": {
			"import": "./dist/glob.js",
			"require": "./dist/glob.cjs",
			"types": "./dist/types/glob.d.ts"
		}
	},
	"sideEffects": [
		"./src/*.{html,scss,css,tsx,ts,jsx,mjs,js}"
	],
	"module": "./dist/index.js",
	"main": "./dist/index.cjs",
	"browser": "",
	"unpkg": "./dist/index.js",
	"types": "./dist/types/index.d.ts",
	"typesVersions": {
		">=3.1": {
			"./*": [
				"./dist/types/*"
			]
		}
	},
	"dependencies": {},
	"peerDependencies": {
		"@clevercanyon/utilities": "^1.0.19",
		"globby": "^13.1.3",
		"ignore": "^5.2.1",
		"micromatch": "npm:@clevercanyon/micromatch.fork@^4.0.5"
	},
	"peerDependenciesMeta": {},
	"bundleDependencies": [],
	"devDependencies": {
		"@clevercanyon/skeleton-dev-deps": "*",
		"@types/micromatch": "^4.0.2",
		"@types/node": "^18.11.9"
	},
	"overrides": {},
	"cpu": [
		"x64",
		"arm64"
	],
	"os": [
		"darwin",
		"linux"
	],
	"engines": {
		"node": "^19.2.0",
		"npm": "^8.19.3"
	},
	"scripts": {
		"preview": "npx vite preview",
		"dev": "npx vite dev --mode=dev",
		"envs:push": "./dev/.files/bin/envs.js push",
		"envs:pull": "./dev/.files/bin/envs.js pull",
		"envs:setup": "./dev/.files/bin/envs.js setup",
		"envs:setup:new": "./dev/.files/bin/envs.js setup --new",
		"build": "npx vite build --mode=prod && npx tsc",
		"build:dev": "npx vite build --mode=dev && npx tsc",
		"build:ci": "npx vite build --mode=ci && npx tsc",
		"build:stage": "npx vite build --mode=stage && npx tsc",
		"build:prod": "npx vite build --mode=prod && npx tsc",
		"update:projects": "./dev/.files/bin/update.js projects --update=project",
		"update:projects:repos": "./dev/.files/bin/update.js projects --update=project --repos",
		"update:projects:dotfiles": "./dev/.files/bin/update.js projects --update=dotfiles",
		"update:project": "./dev/.files/bin/update.js project",
		"update:project:repos": "./dev/.files/bin/update.js project --repos",
		"update:dotfiles": "./dev/.files/bin/update.js dotfiles",
		"wrangler": "CLOUDFLARE_API_TOKEN=${C10N_CLOUDFLARE_TOKEN} npx wrangler"
	},
	"workspaces": [],
	"config": {
		"c10n": {
			"&": {
				"dotfiles": {
					"lock": []
				},
				"build": {
					"appType": "cma",
					"targetEnv": "node"
				}
			}
		}
	}
}
