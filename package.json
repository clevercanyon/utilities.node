{
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "version": "1.0.223",
    "license": "GPL-3.0-or-later",
    "name": "@clevercanyon/utilities.node",
    "description": "Utilities for JavaScript apps running in a Node environment.",
    "repository": "https://github.com/clevercanyon/utilities.node",
    "homepage": "https://github.com/clevercanyon/utilities.node#readme",
    "bugs": "https://github.com/clevercanyon/utilities.node/issues",
    "funding": "https://github.com/sponsors/clevercanyon",
    "keywords": ["clevercanyon"],
    "author": {
        "name": "Clever Canyon",
        "url": "https://clevercanyon.com"
    },
    "contributors": [],
    "type": "module",
    "bin": {},
    "imports": {
        "#^*": "./*",
        "#@*": "./src/resources/*",
        "#*": "./src/*"
    },
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./chalk": {
            "types": "./dist/types/chalk.d.ts",
            "import": "./dist/chalk.js",
            "default": "./dist/chalk.js"
        },
        "./cmd": {
            "types": "./dist/types/cmd.d.ts",
            "import": "./dist/cmd.js",
            "default": "./dist/cmd.js"
        },
        "./dotenv": {
            "types": "./dist/types/dotenv.d.ts",
            "import": "./dist/dotenv.js",
            "default": "./dist/dotenv.js"
        },
        "./fs": {
            "types": "./dist/types/fs.d.ts",
            "import": "./dist/fs.js",
            "default": "./dist/fs.js"
        },
        "./glob": {
            "types": "./dist/types/glob.d.ts",
            "import": "./dist/glob.js",
            "default": "./dist/glob.js"
        },
        "./mailer": {
            "types": "./dist/types/mailer.d.ts",
            "import": "./dist/mailer.js",
            "default": "./dist/mailer.js"
        },
        "./prettier": {
            "types": "./dist/types/prettier.d.ts",
            "import": "./dist/prettier.js",
            "default": "./dist/prettier.js"
        },
        "./redis": {
            "types": "./dist/types/redis.d.ts",
            "import": "./dist/redis.js",
            "default": "./dist/redis.js"
        },
        "./yargs": {
            "types": "./dist/types/yargs.d.ts",
            "import": "./dist/yargs.js",
            "default": "./dist/yargs.js"
        }
    },
    "sideEffects": ["**/*.{css,scss,less}", "./src/resources/initialize.ts"],
    "module": "./dist/index.js",
    "main": "./dist/index.js",
    "browser": "",
    "unpkg": "./dist/index.js",
    "types": "./dist/types/index.d.ts",
    "typesVersions": {
        ">=3.1": {
            "./*": ["./dist/types/*"]
        }
    },
    "dependencies": {},
    "peerDependencies": {
        "@clevercanyon/split-cmd.fork": "^1.0.147",
