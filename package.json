        "archiver": "6.0.1",
        "boxen": "7.1.1",
        "chalk": "5.3.0",
        "dotenv": "16.3.1",
        "dotenv-expand": "10.0.0",
        "dotenv-vault": "1.25.0",
        "find-up": "7.0.0",
        "globby": "14.1.0",
        "nodemailer": "6.10.0",
        "prettier": "3.5.3",
        "shescape": "2.0.2",
        "spawn-please": "npm:@clevercanyon/spawn-please.fork@^2.0.141",
        "term-img": "6.0.0",
        "yargs": "17.7.2",
        "yargs-parser": "21.1.1"
    },
    "peerDependenciesMeta": {},
    "optionalDependencies": {},
    "bundleDependencies": [],
    "devDependencies": {
        "@clevercanyon/dev-deps": "^1.0.402",
